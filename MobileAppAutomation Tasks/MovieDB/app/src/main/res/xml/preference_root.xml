<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="Miscellaneous">
        <ListPreference
            app:entries="@array/countries"
            app:entryValues="@array/countryCodes"
            app:icon="@drawable/ic_round_language_24px"
            app:key="@string/key_country"
            app:summary="Used to display movies in theatres"
            app:title="Country"
            app:dialogIcon="@drawable/ic_round_language_24px" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Privacy">
        <SwitchPreference
            app:icon="@drawable/ic_round_bug_report_24px"
            app:key="@string/key_crashlytics"
            app:summary="Changing this requires an app restart"
            app:title="Automatic crash reports"
            app:defaultValue="true"/>

        <SwitchPreference
            app:icon="@drawable/ic_round_info_24px"
            app:key="@string/key_analytics"
            app:summary="Analytics help us make the app better"
            app:title="Usage analytics"
            app:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>