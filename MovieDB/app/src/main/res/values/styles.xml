<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/textOnPrimaryHighEmphasis</item>
        <item name="android:textColorSecondary">@color/textOnSecondaryHighEmphasis</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.AppCompat.ActionButton.Overflow.MainToolbarIcon
        </item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.MovieDBPreferenceTheme</item>
        <item name="android:navigationBarColor">@color/colorSurface</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextInputLayout.SearchBox">
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="android:colorControlActivated">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/textOnSurfaceHighEmphasis</item>
        <item name="android:textColorHint">@color/textOnSurfaceMediumEmphasis</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1.TextFieldHintTextStyle</item>
        <item name="errorTextAppearance">@style/TextAppearance.MaterialComponents.Caption.TextFieldErrorTextStyle</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextInputLayout.SearchBox.Light">
        <item name="android:textColorPrimary">@color/textOnSecondaryHighEmphasis</item>
        <item name="android:textColorHint">@color/textOnSecondaryMediumEmphasis</item>
        <item name="hintTextAppearance">
            @style/TextAppearance.MaterialComponents.Subtitle1.TextFieldHintTextStyle.Light
        </item>
        <item name="errorTextAppearance">@style/TextAppearance.MaterialComponents.Caption.TextFieldErrorTextStyle</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Caption.TextFieldErrorTextStyle">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.TextFieldHintTextStyle">
        <item name="android:textColor">@color/textOnSurfaceMediumEmphasis</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.TextFieldHintTextStyle.Light">
        <item name="android:textColor">@color/textOnSecondaryHighEmphasis</item>
        <item name="android:textColorHint">@color/textOnSecondaryMediumEmphasis</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Action.MovieInfoChip">
        <item name="chipBackgroundColor">@color/colorSurfaceLight</item>
        <item name="android:textColor">@color/textOnPrimaryHighEmphasis</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.MainToolbar">
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="titleTextColor">@color/colorSecondary</item>
    </style>

    <style name="Widget.AppCompat.ActionButton.Overflow.MainToolbarIcon">
        <item name="android:tint">@color/colorSecondary</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline3.ExpandedToolbarTitle">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline5.CollapsedToolbarTitle">
        <item name="android:textColor">@color/textOnPrimaryHighEmphasis</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2.EmptyViewTextStyle">
        <item name="android:textColor">@color/colorSurfaceLight</item>
    </style>

    <style name="PreferenceThemeOverlay.v14.Material.MovieDBPreferenceTheme">
        <item name="android:textColorSecondary">@color/textOnSurfaceMediumEmphasis</item>
    </style>
</resources>
